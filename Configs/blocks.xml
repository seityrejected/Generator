<configs>
	<append xpath="/blocks">

		<block name="industrialgenerator">
			<property name="CustomIcon" value="industrial_generator" />
			<property name="CustomIconTint" value="85c47c" />
			<property name="TintColor" value="85c47c" />
			<property name="CreativeMode" value="Player" />
			<property name="Class" value="Generator" />
			<property name="DisplayType" value="blockElectricalHardened" />
			<property name="UnlockedBy" value="perkAdvancedEngineering,generatorbankSchematic" />
			<property name="Material" value="Mmetal_medium" />
			<property name="StabilitySupport" value="false" />
			<property name="Shape" value="ModelEntity" />
			<property name="Mesh" value="#@modfolder:Resources/ScoutDrone.unity3d?Drone" />  <!-- fix this -->
			<property name="Path" value="solid" />
			<property name="Model" value="Entities/Electrical/generatorPrefab" />
			<property name="HandleFace" value="Bottom" />
			<property name="ImposterDontBlock" value="true" />
			<property name="Collide" value="movement,melee,bullet,arrow,rocket" />
			<property name="DescriptionKey" value="MilitaryGeneratorDesc" />
			<property name="MaxFuel" value="10000" />
			<property name="OutputPerFuel" value="11250" />
			<property name="MaxPower" value="12250" />
			<property name="OutputPerStack" value="400" />
			<property name="SlotItem" value="MilitarySmallEngine" />
			<property name="Group" value="Science" />
			<property class="RepairItems">
				<property name="resourceForgedIron" value="8" />
				<property name="resourceMechanicalParts" value="8" />
				<property name="resourceElectricParts" value="8" />
				<property name="resourceElectricParts" value="3" />
			</property>
			<drop event="Harvest" name="resourceScrapIron" count="192" tag="allHarvest" />
			<drop event="Harvest" name="terrStone" count="0" tool_category="Disassemble" />
			<drop event="Harvest" name="resourceForgedIron" count="3" tag="salvageHarvest" />
			<drop event="Harvest" name="resourceMechanicalParts" count="3" tag="salvageHarvest" />
			<drop event="Harvest" name="resourceElectricParts" count="3,4" tag="salvageHarvest" />
			<drop event="Destroy" count="0" />
			<drop event="Fall" name="scrapMetalPile" count="1" prob="0.75" stick_chance="1" />
			<property name="Stacknumber" value="1" />
			<property name="TakeDelay" value="15" />
			<property name="EconomicValue" value="10000" />
			<property name="FilterTags" value="MC_playerBlocks,SC_electrical" />
			<property name="SortOrder1" value="70a0" />
		</block>
	</append>
